<%= form_for(event) do |f| %>
    <%= f.label :title %><br />
    <%= f.text_field :title, placeholder: 'Example Event' %><br />

    <%= f.label :start_date %><br />
    <%= f.datetime_field :start_date %><br />

    <%= f.label :end_date %><br />
    <%= f.datetime_field :end_date %><br />

    <%= f.check_box :online %>
    <%= f.label :online, 'Online Event?' %><br />

    <%= f.label :online_link, 'URL to join the online event' %><br />
    <%= f.url_field :online_link, placeholder: 'https://example.com/' %><br />

    <%= f.label :guest_limit, 'Guest Limit (Leave at 0 for no limit)' %><br />
    <%= f.number_field :guest_limit, min: 0 %><br />

    <%= f.label :description %><br />
    <%= f.text_area :description %><br />

    <%= f.submit 'Submit' %>

<% end %>
